{
	"name": "Better TweetDeck",
	"short_name": "BetterTDeck",
	"version": "1.1.1",
	"manifest_version": 2,
	"description": "Improves the user experience of TweetDeck on the web (http://tweetdeck.twitter.com)",
	"content_scripts": [{
		"matches": ["https://tweetdeck.twitter.com/*","http://tweetdeck.twitter.com/*"],
		"js": ["jquery.ajax.min.js","injectScript.js","content.js"],
		"css": ["content.css"]
		}],
	"icons": { "16": "icon16.png",
	           "48": "icon48.png",
	          "128": "icon128.png" },
	"permissions": ["storage"],
	"options_page": "fancy-settings/source/index.html",
	"background" : { "page": "background.html" },
	"permissions": ["<all_urls>"]
}
