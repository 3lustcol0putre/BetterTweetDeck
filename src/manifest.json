{
	"name": "BetterTweetDeck³",
	"short_name": "BTD³",
	"version": "3.0.0",
	"manifest_version": 2,
	"description": "ᕕ( ᐛ )ᕗ",
	"content_scripts": [{
		"matches": ["https://tweetdeck.twitter.com/*","http://tweetdeck.twitter.com/*"],
		"js": ["js/content.js"],
		"css": ["css/index.css"]
		}],
	"background": {
		"scripts": ["js/background.js"]
	},
	"icons": { "16": "icons/icon16.png",
	           "48": "icons/icon48.png",
	          "128": "icons/icon128.png" },
	"permissions": [
		"storage",
		"https://api.embed.ly/1/*",
		"http://erambert.me/*",
		"https://tweetdeck.twitter.com/*",
		"tabs",
		"contextMenus"
	],
	"options_ui": {
		"page": "options/ui/ui.html",
		"chrome_style": false
	},
	"web_accessible_resources": ["js/inject.js", "js/content.js.map", "js/inject.js.map", "js/background.js.map", "emojis/sheet_twitter_64.png", "emojis/emoji-happy.svg"],
	"content_security_policy": "img-src 'self' *; default-src; unsafe-inline; connect-src * https:"
}
