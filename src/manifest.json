{
	"name": "BetterTweetDeck³",
	"short_name": "BTD³",
	// "default_locale": "en",
	"version": "3.0.0",
	"manifest_version": 2,
	"description": "ᕕ( ᐛ )ᕗ",
	"content_scripts": [{
		"matches": ["https://tweetdeck.twitter.com/*","http://tweetdeck.twitter.com/*"],
		"js": ["js/content.js"],
		"css": ["css/index.css"]
		}],
	"background": {
		"scripts": ["js/background.js"]
	},
	"icons": { "16": "icons/icon16.png",
	           "48": "icons/icon48.png",
	          "128": "icons/icon128.png" },
	"permissions": [
		"storage"
	],
	"web_accessible_resources": ["js/inject.js"],
	"content_security_policy": "img-src 'self' *; default-src; unsafe-inline;"
}
