{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "es2018"],
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
