{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "resolveJsonModule": true
  }
}
